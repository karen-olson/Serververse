#!/usr/bin/env bash

set -e

function start {
  java -cp $1 server.EchoServerMain >/dev/null &
  echo $!
}

function wait_for_server {
  local host=$1
  local port=$2

  echo "Waiting for server to start"
  local max_attempts=5
  for i in $(seq 1 $max_attempts); do
    if nc -z $host $port; then
      break
    fi
    if [[ $i == $max_attempts ]]; then
      echo "Timeout waiting for server"
      exit 1
    fi
    sleep $i
    echo -n "."
  done
}

function connect_with_netcat {
  local os=uname
  local host=$1
  local port=$2
  local input=$3
  local timeout_seconds=0

  if [ $os="Linux" ]
  then
    nc $host $port -q $timeout_seconds <<<"$input"
  else
    nc $host $port <<<"$input"
  fi
}

function test {
  input="Hello?\nAnotherLine"

  output=$(connect_with_netcat localhost 3000 $input)

  test_equality "$input" "$output"
}

function test_equality {
  if [ "$1" = "$2" ]; then
    echo "The server gave an expected response"
  else
    echo "The server gave an unexpected response"
    exit 1
  fi
}

function main {
  local jar=$1
  pid=$(start $jar)
  trap 'kill $pid' EXIT

  wait_for_server localhost 3000

  for i in {1..2}
  do
    test
  done
}

main "$@"